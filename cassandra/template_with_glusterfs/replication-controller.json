{
    "apiVersion": "v1",
    "kind": "ReplicationController",
    "metadata": {
        "name": "cassandra-instance",
        "labels": {
            "name": "cassandra-instance"
        }
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "group": "cassandra",
            "name": "cassandra-instance"
        },
        "template": {
            "metadata": {
                "labels": {
                    "group": "cassandra",
                    "name": "cassandra-instance"
                }
            },
            "spec": {
                "volumes": [
                    {
                        "name": "cassandra-volume",
                        "glusterfs": {
                            "endpoints": "glusterfs",
                            "path": "cassandra_volume",
                            "readOnly": false
                        }
                    }
                ],
                "containers": [
                    {
                        "name": "cassandra",
                        "image": "cloudawan/cassandra",
                        "ports": [
                            {
                                "name": "cql", 
                                "containerPort": 9042
                            },
                            {
                                "name": "thrift", 
                                "containerPort": 9160
                            }
                        ],
                        "env": [
                            {
                                "name": "SERVICE_NAME",
                                "value": "cassandra"
                            },
                            {
                                "name": "NAMESPACE",
                                "value": "default"
                            }
                        ],
                        "volumeMounts": [
                            {
                                "name": "cassandra-volume",
                                "readOnly": false,
                                "mountPath": "/var/lib/cassandra"
                            }
                        ]
                    }
                ]
            }
        }
    }
}
